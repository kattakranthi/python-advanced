import pandas as pd

df = pd.DataFrame({'A': [1, 2, 3], 'B': [4, 5, 6]})

# Calculate the sum of each row (along columns)
row_sum = df.sum(axis=1)  # Result: 0     5, 1    7, 2    9

import pandas as pd

df = pd.DataFrame({'A': [1, 2, 3], 'B': [4, 5, 6]})

# Calculate the sum of each column (along rows)
column_sum = df.sum(axis=0)  # Result: A    6, B    15
