#using positional arguments with placeholders
name = "David"
age = 28

formatted_string = "My name is {} and I am {} years old.".format(name, age)
print(formatted_string)

#using the .format() method
name = "Bob"
age = 25

formatted_string = "My name is {} and I am {} years old.".format(name, age)
print(formatted_string)

#using the placeholders with .format() method 
name = "Charlie"
age = 22

formatted_string = "My name is {0} and I am {1} years old.".format(name, age)
print(formatted_string)

#using named placeholders
name = "Eve"
age = 35

formatted_string = "My name is {n} and I am {a} years old.".format(n=name, a=age)
print(formatted_string)

#Formatting number with precision
pi = 3.141592653589793

formatted_number = "The value of pi is {:.2f}".format(pi)
print(formatted_number)

#f-string (formatted string literals) to embed expressions inside string literals 

name = "John"
age = 30
formatted_string = f"My name is {name} and I am {age} years old."
print(formatted_string)
# Output: "My name is John and I am 30 years old."

pi = 3.141592653589793
formatted_pi = f"Value of pi is approximately {pi:.2f}"
print(formatted_pi)
# Output: "Value of pi is approximately 3.14"




